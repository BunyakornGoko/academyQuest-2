<% content_for :title, @quest.name %>

<div class="max-w-3xl mx-auto" data-testid="quest-show-container">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice" data-testid="notice"><%= notice %></p>
  <% end %>

  <div class="mb-6">
    <%= link_to quests_path, class: "flex items-center text-blue-600 hover:text-blue-800", data: { testid: "back-to-quests-link" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to quests
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200" data-testid="quest-details">
    <div class="p-6">
      <div class="flex justify-between items-start">
        <h1 class="font-bold text-3xl text-gray-800 mb-4 <%= @quest.status? ? 'line-through' : '' %>" data-testid="quest-detail-name"><%= @quest.name %></h1>
        <span class="px-3 py-1 rounded-full text-sm font-medium <%= @quest.status? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>" data-testid="quest-detail-status">
          <%= @quest.status? ? "Completed" : "In Progress" %>
        </span>
      </div>

      <div class="mt-8 flex gap-3">
        <%= link_to edit_quest_path(@quest), class: "flex items-center justify-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition-colors duration-200", data: { testid: "quest-edit-button" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
        
        <%= button_to @quest, method: :delete, class: "flex items-center justify-center rounded-md px-4 py-2 bg-red-600 hover:bg-red-500 text-white font-medium transition-colors duration-200", data: { turbo_confirm: "Are you sure you want to delete this quest?", testid: "quest-delete-button" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>
