<div id="<%= dom_id quest %>" class="w-full sm:w-auto my-5 space-y-5" data-testid="quest-item">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <span data-testid="quest-name"><%= quest.name %></span>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <span data-testid="quest-status"><%= quest.status? ? "Yes" : "No" %></span>
  </div>
</div>
